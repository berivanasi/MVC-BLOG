@model KisiselBlog.Models.Blog
@{
    ViewData["Title"] = "Post";
}

<header class="masthead" style="background-image: url(@Model.ImagePath) ">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>Süper Psikoloji</h1>
                    <span class="subheading">Sınırların Kadar Özgürsün</span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <header class="masthead" style="background-image: url('@Model.ImagePath')">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="post-heading">
                        <h1>@Model.Title</h1>
                        <h2 class="subheading">@Model.Subtitle</h2>
                        <span class="meta">
                            Posted by
                            @Model.Yazar.Name
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <!-- Post Content -->
        <article>
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-md-10 mx-auto">
                        @Html.Raw(Model.Content)
                    </div>
                </div>
            </div>
        </article>
    </div>
</div>