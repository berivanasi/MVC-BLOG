@model IEnumerable<KisiselBlog.Models.Blog>
@{
    ViewData["Title"] = "Home Page";
}
<header class="masthead" style="background-image: url('/assets/img/psychology-1.jpg') ">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>Süper Psikoloji</h1>
                    <span class="subheading">Sınırların Kadar Özgürsün</span>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            @foreach (var item in Model)
            {
                <div class="post-preview">
                    <a asp-action="Post" asp-route-id="@item.Id">
                        <h2 class="post-title">
                            @item.Title
                        </h2>
                        <h3 class="post-subtitle">
                            @item.Subtitle
                        </h3>
                    </a>
                    <p class="post-meta">
                        Kullanıcı
                        @item.Yazar.Name
                        yayınlandı
                    </p>
                </div>
                <hr>
            }
